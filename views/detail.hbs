<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <!-- Back / Edit / Delete -->
      <div class="mb-3" style="margin-top: -30px;">
        <a href="/" class="me-1" style="text-decoration: none;">
          <button class="deleteButton btn btn-light btn-sm border border-secondary text-secondary" type="button">
            Back
          </button>
        </a>
        <a href="/restaurants/{{restaurant._id}}/edit" class="me-1" style="text-decoration: none;">
          <button class="deleteButton btn btn-primary btn-sm " type="button">
            Edit
          </button>
        </a>
        <!-- delete -->
        <button class="deleteButton btn btn-danger btn-sm " type="button" data-name="{{restaurant.name}}"
          data-id="{{restaurant._id}}" data-bs-toggle="modal" data-bs-target="#deleModal">
          Delete
        </button>
      </div>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{#if restaurant.location}}
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
        {{else}}
        未提供
        {{/if}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{#if restaurant.phone}}
        {{restaurant.phone}}
        {{else}}
        未提供
        {{/if}}
      </p>

      <!-- 介紹 -->
      <div class="mb-4">
        <div>
          <span class="text-secondary">
            <i class="fa-regular fa-comment-dots"></i>
            介紹：
          </span>
          {{restaurant.description}}
        </div>
      </div>

      <!-- 照片 -->
      <div>
        <img class="rounded mx-auto d-block mb-4 w-100" {{#if restaurant.image}} src="{{restaurant.image}}" {{else}}
          src="/images/default.jpg" {{/if}} alt="{{restaurant.name}}" style="max-width: 600px;">
      </div>

    </div>
  </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleModal" tabindex="-1" aria-labelledby="deleModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">確定刪除： <span id="restaurantName"><!--use js to control--></span> ?
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <form id="delete-form" action="#" method="POST"> <!--use js to control-->
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- Modal end -->